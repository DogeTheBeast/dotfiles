# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[mediaplayer]
command=~/.config/i3blocks/i3blocks-contrib/mediaplayer/mediaplayer
instance=spotify
interval=5
signal=10

[volume-pipewire]
command=~/.config/i3blocks/i3blocks-contrib/volume-pipewire/volume-pipewire
interval=once
signal=11
LONG_FORMAT="${SYMB}${VOL}%"
SHORT_FORMAT="${SYMB}${VOL}%"

[backlight]
command=~/.config/i3blocks/i3blocks-contrib/backlight/backlight
label=â˜€
interval=60
signal=10
#STEP_SIZE=5
#USE_SUDO=0

[iface]
command=~/.config/i3blocks/i3blocks-contrib/iface/iface
LABEL=wifi
#IFACE=wlan0
ADDRESS_FAMILY=inet
color=#00FF00
interval=10
# set this to 1 to display the name of the connected WIFI interface instead of the IP address.
display_wifi_name=1

[cpu_usage]
command=~/.config/i3blocks/i3blocks-contrib/cpu_usage/cpu_usage
interval=10
LABEL=CPU 
#min_width=CPU: 100.00%
#T_WARN=50
#T_CRIT=80
#DECIMALS=2
#COLOR_NORMAL=#EBDBB2
#COLOR_WARN=#FFFC00
#COLOR_CRIT=#FF0000

[memory]
command=~/.config/i3blocks/i3blocks-contrib/memory/memory
label=MEM 
interval=30

[battery2]
command=~/.config/i3blocks/i3blocks-contrib/battery2/battery2
markup=pango
interval=30

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
